<div class="center-hor">
    <div class="auth-container">
        <h2>Register</h2>
        <form id="registration-form">
            <div>
                <label for="email"></label>
                <input class="auth-input" type="email" id="email" name="email" placeholder="Email" required>
            </div>
            <div>
                <label for="password"></label>
                <input class="auth-input" type="password" id="password" name="password" placeholder="Password" required>
            </div>
            <div>
                <label for="confirm-password"></label>
                <input class="auth-input" type="password" id="confirm-password" name="confirm-password"
                    placeholder="Confirm Password" required>
            </div>
            <div class="center-hor">
                <button class="submit-btn" type="submit">Register</button>
            </div>
        </form>
        <div id="message" style="color: red;"></div>
    </div>
</div>
<script src="/js/register.js"></script>