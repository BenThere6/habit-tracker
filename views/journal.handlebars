<div class="center-hor">
    <div class="auth-container">
        <h1 class="habit-title">Journal</h1>
        <section>
            <h2 class="habit-title">Add New Entry</h2>
            <form id="new-journal-entry" class="form-container">
                <div class="form-field">
                    <label for="habit-select"></label>
                    <select id="habit-select" name="habit-select" class="auth-input">
                        <option value="" disabled selected>Habit (Optional)</option>
                        <!-- Dynamically load habit options here -->
                    </select>
                </div>
                <div class="form-field">
                    <label for="entryText">Entry:</label>
                    <textarea id="entryText" name="entryText" class="auth-input" rows="4" cols="50" required></textarea>
                </div>
                <button type="submit" class="submit-btn">Add Entry</button>
            </form>
        </section>

        <section>
            <h2 class="habit-title">Past Entries</h2>
            <div id="journal-entries" class="text-box">
                {{#each journalEntries as |entry|}}
                <div class="journal-entry">
                    <h3 class="habit-name">{{entry.entryDate}} {{entry.habitName}} </h3>
                    <p>{{entry.entryText}}</p>
                </div>
                {{/each}}
            </div>
        </section>
    </div>
</div>

<script src="/js/journal.js"></script>