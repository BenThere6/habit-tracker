<div class="center-hor">
    <div class="auth-container font-main">
        <h2>Login</h2>
        <form id="loginForm">
            <div>
                <label for="email"></label>
                <input class="auth-input" type="email" id="email" name="email" placeholder="Email" required>
            </div>
            <div>
                <label for="password"></label>
                <input class="auth-input" type="password" id="password" name="password" placeholder="Password" required>
            </div>
            <div>
                <input type="checkbox" id="rememberMe" name="rememberMe">
                <label for="rememberMe">Remember Me</label>
            </div>
            <div class="center-hor">
                <button class="submit-btn" type="submit">Login</button>
            </div>
            <div id="login-error-message" class="error-message"></div>
        </form>
    </div>
</div>
<script src="/js/login.js"></script>